<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manel.prohomemade">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Logactivity"
            android:label="Authentification" />
        <activity
            android:name=".LogInResultat"
            android:label="Bienvenue" />
        <activity
            android:name=".SignIn"
            android:label="Inscription" />
        <activity
            android:name=".ConnectedClient"
            android:label="@string/title_activity_connected"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConnectedArtisant"
            android:label="@string/title_activity_connected"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignInFG"
            android:label="Inscription" />
        <activity
            android:name=".ParametreC"
            android:label="Deconnexion" />
        <activity
            android:name=".ParametreA"
            android:label="Deconnexion" />
        <activity
            android:name=".ModifierC"
            android:label="Modifier Profil" />
        <activity
            android:name=".ModifierA"
            android:label="Modifier Profil" />
        <activity
            android:name=".InsertProduct"
            android:label="Nouveau Produit" />
        <activity
            android:name=".ListeProduitArt"
            android:label="Liste des Produits" />
        <activity
            android:name=".CmderProduit"
            android:label="Commander Produits" />
        <activity
            android:name=".ModSuppProduit"
            android:label="Modifier / Supprimer Produit" />
        <activity android:name=".ListeProduit"></activity>
    </application>

</manifest>